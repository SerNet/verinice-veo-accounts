{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignAutomerge": true,
  "automerge": true,
  "automergeType": "pr",
  "reviewers": [
    "JJ"
  ],
  "packageRules": [
    {
      "groupName": "Kotlin",
      "matchPackageNames": [
        "/^org.jetbrains.kotlin/"
      ]
    },
    {
      "groupName": "Keycloak Client",
      "matchPackageNames": [
        "/^org.keycloak:/"
      ]
    },
    {
      "groupName": "Kotest",
      "matchPackageNames": [
        "/^io.kotest:/"
      ]
    },
    {
      "postUpgradeTasks": {
        "commands": [
          "./gradlew spotlessApply"
        ],
        "fileFilters": [
          "**/*"
        ]
      },
      "matchPackageNames": [
        "/^com.diffplug.spotless/"
      ]
    }
  ]
}
