{
  "$schema" : "https://docs.renovatebot.com/renovate-schema.json",
  "assignAutomerge" : true,
  "automerge" : true,
  "automergeType" : "pr",
  "reviewers" : [
    "JJ"
  ],
  "packageRules" : [
    {
      "matchPackagePatterns" : [
        "^org.jetbrains.kotlin"
      ],
      "groupName" : "Kotlin"
    },
    {
      "matchPackagePatterns" : [
        "^org.keycloak:"
      ],
      "groupName" : "Keycloak Client"
    },
    {
      "matchPackagePatterns" : [
        "^com.diffplug.spotless"
      ],
      "postUpgradeTasks" : {
        "commands" : [
          "./gradlew spotlessApply"
        ],
        "fileFilters" : [
          "**/*"
        ]
      }
    }
  ]
}